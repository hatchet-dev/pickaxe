    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.1",
    "@types/prompts": "^2.4.9",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
